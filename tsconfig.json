{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"sourceMap": true,
		"strictPropertyInitialization": true,
		"strictNullChecks": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noImplicitThis": true,
		"declarationDir": "dist-types",
		"noImplicitAny": true,
		"skipLibCheck": true,
		"declaration": true,
		"noResolve": false,
		"outDir": "dist",
		"rootDir": "src"
	},
	"lib": ["es20215"]
}
